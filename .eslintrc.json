{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended", 
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-undef": "error",
        "no-unused-expressions": "error",
        "prefer-const": "error",
        //"no-used-vars": "error",
        "no-console": "warn"
    },
    "globals": {
        "process": "readonly"
    }
}
